<div class="user_index">
  <p id="notice"><%= notice %></p>
  <% @admins = [] %>
  <% @mods = [] %>
  <% @normals = [] %>
  <h1>Listing Users</h1>
  <% @users.each do |user|%>
  <% if user.role == "Admin" %>
  <% @admins << user %>
  <% elsif user.role == "Moderator" %>
  <% @mods << user %>
  <% elsif user.role == "User" %>
  <% @normals << user %>
  <% end %>
  <% end %>

<h1>Listing Users</h1>


<div class="col-lg-12 col-md-12 col-sm-12"">
<table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Show</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
    <% if user.role == "Admin" %>
    <% @role = "danger" %>
    <% elsif user.role == "Moderator" %>
    <% @role = "info" %>
    <% else %>
    <% @role = "" %>
    <%end%>
      <tr class = "<%= @role %>">
        <td><%=user.name%></td>
        <td><%=user.role%></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>      
      <%end%>
    </tbody>
  </table>
</div>
