<div class="user_index">
  <p id="notice"><%= notice %></p>
  <% @admins = [] %>
  <% @mods = [] %>
  <% @normals = [] %>
  <% @users.each do |user|%>
  <% if user.role == "Admin" %>
  <% @admins << user %>
  <% elsif user.role == "Moderator" %>
  <% @mods << user %>
  <% elsif user.role == "User" %>
  <% @normals << user %>
  <% end %>
  <% end %>

<h1>Listing Users</h1>
<h3>Admin</h3>
<table>
  <% @admins.each do |admin| %>
  <tr>
    <td><%= admin.name %></td>
    <td><%= link_to 'Show', admin %></td>
  </tr>
  <% end %>
</table>
<h3>Moderator</h3>
<table>
  <% @mods.each do |mod| %>
  <tr>
    <td><%= mod.name %></td>
    <td><%= link_to 'Show', mod %></td>
    <td><%= link_to 'Edit', edit_user_path(mod) %></td>
  </tr>
  <% end %>
</table>
<h3>Normal User</h3>
<table>
  <% @normals.each do |normal| %>
  <tr>
    <td><%= normal.name %></td>
    <td><%= link_to 'Show', normal %></td>
    <td><%= link_to 'Edit', edit_user_path(normal) %></td>
  </tr>
  <% end %>
</table>
</div>
