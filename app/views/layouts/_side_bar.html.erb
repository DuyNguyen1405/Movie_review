<div class="col-lg-4 col-md-4 col-sm-4">
  <aside class="right_content">
    <div class="single_sidebar">
      <h2><span>Popular Post</span></h2>
      <ul class="spost_nav">
        <% @score = RatingCache.order('avg DESC').first(5).each do |score| %>
        <li>

          <div class="media wow fadeInDown"> 
            <!-- <a href="pages/single_page.html" class="media-left"> <img alt="poster" src="images/post_img"> </a> -->
            <% @movie = Movie.find(score.cacheable_id) %>
            <%= link_to (image_tag(@movie.poster, alt: "poster")), @movie, :class => "media-left" %>
            <div class="media-body"> 
              <p><%= link_to(@movie.name, @movie, :class => "catg_title") %></a></p>
              <p><%= number_with_precision(score.avg, :precision => 1) %></p>
            </div>
          </div>
        </li>
        <% end %>

      </ul>
    </div>
    <div class="single_sidebar wow fadeInDown">
      <h2><span>Category Archive</span></h2>
      <select class="catgArchive">
        <option>Select Category</option>
        <option>Life styles</option>
        <option>Sports</option>
        <option>Technology</option>
        <option>Treads</option>
      </select>
    </div>
    <div class="single_sidebar wow fadeInDown">
      <h2><span>Links</span></h2>
      <ul>
        <li><a href="#">Blog</a></li>
        <li><a href="#">Rss Feed</a></li>
        <li><a href="#">Login</a></li>
        <li><a href="#">Life &amp; Style</a></li>
      </ul>
    </div>
    <div class="single_sidebar wow fadeInDown">
    <h2><span>Chat Box</span></h2>
    <iframe src="https://www7.cbox.ws/box/?boxid=823884&boxtag=6MnXsK" width="100%" height="450" allowtransparency="yes" frameborder="0" marginheight="0" marginwidth="0" scrolling="auto"></iframe>  </div>
    <div class="single_sidebar wow fadeInDown">
    <h2><span>Random Categories</span></h2>
      <% @categories = Category.order('RANDOM()').first(10).each do |categories| %>
      <button class="btn btn-theme"><%= categories.name  %></button>
      <% end %>
    </div>
  </aside>
</div>