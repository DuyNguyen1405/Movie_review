<p id="notice"><%= notice %></p>

<h1>Listing Searches</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search.id %></td>
        <td><%= search.name %></td>
        <td><%= search.summary %></td>
        <td><%= link_to 'Show', search %></td>
        <td><%= link_to 'Edit', edit_comment_path(search) %></td>
        <td><%= link_to 'Destroy', search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

