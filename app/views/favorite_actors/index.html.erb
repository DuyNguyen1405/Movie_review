<p id="notice"><%= notice %></p>

<h1>Listing Favorite Actors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_actors.each do |favorite_actor| %>
      <tr>
        <td><%= link_to 'Show', favorite_actor %></td>
        <td><%= link_to 'Edit', edit_favorite_actor_path(favorite_actor) %></td>
        <td><%= link_to 'Destroy', favorite_actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

