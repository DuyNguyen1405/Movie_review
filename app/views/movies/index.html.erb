<div class="container">

  <header id="header">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header_top">
          <div class="header_top_left">
            <ul class="top_nav">
              <li><a href="index.html">Home</a></li>
              <li><a href="#">About</a></li>
              <li><a href="pages/contact.html">Contact</a></li>
            </ul>
          </div>
          <div class="header_top_right">
            <p>Friday, December 05, 2045</p>
            <%= link_to 'Sign in with Facebook', user_facebook_omniauth_authorize_path %>
            <%= link_to 'LOgout', destroy_user_session_path, method: :delete, :class => 'navbar-link'%>
          </div>
        </div>
      </div>
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="header_bottom">
          <div class="logo_area"> <a href="index.html" class="logo"><%= image_tag("logo.jpg") %></a> </div>
          <div class="add_banner"> <a href="#"><%= image_tag("addbanner_728x90_V1.jpg") %></a> </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="left_content">
        <div class="single_post_content">
          <h2><span>Business</span></h2>
          <% if params[:order_by] && params[:order_by] == 'name' %>
          <%sort_params = "name"%>
          <%else%>
          <%sort_params = "id"%>
          <%end%>
          <%@movies = Movie.paginate(page: params[:page], per_page: 3).order(sort_params)%>
          <% @movies.each do |movie| %>
          <ul class="business_catgnav  wow fadeInDown">
            <li>
              <figure class="bsbig_fig"> <a href="" class="featured_img"> <%= image_tag("featured_img2.jpg",  alt: "Film logo") %> 
                <span class="overlay"></span> </a>
                <figcaption> <a href="movies/<%=movie.id%>"><%= movie.name %></a> </figcaption>
                <p><%= movie.summary %></p>
              </figure>
            </li>
            <li>
              <hr>
            </li>
          </ul>
          <% end %>
          <%= will_paginate %>

        </div>
      </div>
    </div>
  </div>
